<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".ui.login.AudiLoginFragment">

    <TextView
        android:id="@+id/title_register_audience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Audience"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowleft"
        android:layout_alignParentBottom="@+id/title_register_audience"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/title_description_audience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:textSize="13sp"
        android:layout_below="@+id/title_register_audience"
        android:text="Enter a valid phone number to get an OTP code"
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/phone_register_audience"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/title_description_audience"
            android:hint=" +62 | Enter your phone number"
            android:inputType="text"
            android:background="@drawable/boxtext"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="9dp"
            android:text="Send OTP"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/when_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="When register, you will agree to the ...  Service Terms &amp; acknowledge
that our Privacy Notice applies."
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/alredy_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Donâ€™t have an account yet?"/>

            <TextView
                android:id="@+id/Login_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2sp"
                android:layout_alignEnd="@+id/alredy_have_account"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:text="Login here" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>