<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    tools:context=".ui.dashboard.NotificationsFragment">

    <TextView
        android:id="@+id/title_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Notification"
        android:paddingBottom="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:src="@drawable/arrowleft"
        android:layout_marginTop="8dp"/>


    <Button
        android:id="@+id/button_trasaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_notification"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Transaction"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_notification"
        app:layout_constraintLeft_toRightOf="@id/button_trasaction"
        android:layout_marginLeft="12dp"
        android:text="Info"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"/>

    <TextView
        android:id="@+id/newtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_trasaction"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:text="New"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/notifnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/notifnew"
        app:layout_constraintTop_toBottomOf="@+id/newtext"/>

    <TextView
        android:id="@+id/prevoius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/notifnew"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/notifprevious"
        app:layout_constraintTop_toBottomOf="@+id/prevoius"
        android:layout_marginTop="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>